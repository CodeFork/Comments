<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp1.1</TargetFramework>
    <Description>Comments as a middleware</Description>
    <PreBuildEvent></PreBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\comments.js" />
    <None Remove="Assets\comments.min.js" />
    <None Remove="Assets\loader.js" />
    <None Remove="Assets\view.html" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets\comments.js" />
    <EmbeddedResource Include="Assets\comments.min.js" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets\loader.js" />
    <EmbeddedResource Include="Assets\view.html" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Actions\PostCommentActionHandlerFactory.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Markdig" Version="0.12.3" />
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="1.1.2" />
    <PackageReference Include="Microsoft.Data.SQLite" Version="1.1.1" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>

</Project>